#:kivy 1.9.1

<Tritonic>:


    BoxLayout:
        orientation: 'vertical'
        width: 800

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: "Clear"

            Button:
                text: "Play"

            Button:
                text: "Save"

        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: "Chords"

            TextInput:
                id: input_chords
                focus: false

        StackLayout:
            id: chords_shown
            orientation: 'lr-tb'
